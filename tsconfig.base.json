{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@neweast/api/*": ["apps/api/src/*"],
      "@neweast/web/*": ["apps/web/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
